{
  "general": {
    "botName": "Lina's Laser Bot",
    "defaultLanguage": "ar",
    "responseTimeout": 5,
    "enableVoice": true,
    "enableImages": true,
    "enableTraining": true
  },
  "notifications": {
    "notificationsEnabled": true,
    "emailAlerts": true,
    "humanTakeoverNotifyMobiles": "+96171412604"
  },
  "security": {
    "sessionTimeout": 24
  },
  "smartMessaging": {
    "enabled": false,
    "previewBeforeSend": false,
    "autoApproveAfterMinutes": 0,
    "maxQueueSize": 1000,
    "validationRules": {
      "minPhoneLength": 8,
      "maxPhoneLength": 15,
      "maxMessageLength": 1600,
      "requiredVariables": [
        "customer_name"
      ]
    },
    "templateSchedules": {
      "reminder_24h": {
        "enabled": true,
        "sendTime": "15:00",
        "timezone": "Asia/Beirut"
      },
      "post_session_feedback": {
        "enabled": true,
        "sendTime": "20:00",
        "timezone": "Asia/Beirut"
      },
      "missed_yesterday": {
        "enabled": true,
        "sendTime": "10:00",
        "timezone": "Asia/Beirut"
      },
      "attended_yesterday": {
        "enabled": true,
        "sendTime": "21:00",
        "timezone": "Asia/Beirut"
      },
      "twenty_day_followup": {
        "enabled": true,
        "sendTime": "14:00",
        "timezone": "Asia/Beirut"
      }
    }
  },
  "pricingSync": {
    "enabled": true,
    "sourceOfTruth": "api_get_pricing_details",
    "requireBodyPartServiceIds": [
      1,
      12,
      13
    ],
    "discountRules": {
      "preferSystemDiscountValues": true,
      "deriveFinalPriceWhenMissing": true
    }
  }
}